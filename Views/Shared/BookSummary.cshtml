@{
}

@model Book
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary" style="float:right; color:black">
                <small>Author: @Model.Author</small>
                <br />
                <small>Publisher: @Model.Publisher</small>
                <br />
                <small>ISBN: @Model.Isbn</small>
                <br />
                <small>Classification: @Model.Classification</small>
                <br />
                <small>Category: @Model.Category</small>
                <br />
                <small>Number of Pages: @Model.PageCount</small>
                <br />
                <small>Price: @Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <form method="post" asp-page="/Select">
        <input type="hidden" asp-for="@Model.Category" />

        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
        </span>
    </form>
</div>